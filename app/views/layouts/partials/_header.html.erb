<div class="header">
	<div class="wrapper">
		<div class="logo"><%=link_to image_tag('forumname'), '/' %></div>
		<div class="logged-header">
			<% if @current_user.present? %>
				<div class="who"><%= @current_user.login %></div>
				<div class="logout"><%= link_to "Log Out", logout_path %></div>
				<% else %>
		</div>
		<div class="signup-login">
			<ul>					
				<li class="signup"><%= link_to "Sign up", new_user_path %></li>
				<li class="login"><%= link_to "Log in", login_path %></li>				
			</ul>	
		</div>
		<% end %>
		<div class="clear"></div>
	</div>
</div>