<div class="header">
	<div class="wrapper">

		<div class="logo"><%=link_to 'Forumname', '/' %></div>
		
		<% if @current_user.present? %>
			<div class="logged-header">			
				<ul>
					<li class="who"><%= @current_user.login %></li>
					<li class="profile"><%= link_to "Profile", user_path(@current_user) %></li>
					<li class="logout"><%= link_to "Log Out", logout_path %></li>
				</ul>				
			</div>
		<% else %>
			<div class="signup-login">
				<ul>					
					<li class="signup"><%= link_to "Sign up", new_user_path %></li>
					<li class="login"><%= link_to "Log in", login_path %></li>				
				</ul>	
			</div>
		<% end %>

	</div>
</div>