<div class="forum-box">
	<div class="wrapper">

		<div class="slogan"></div>

		<div class="categories-box">
      <p class="title">Categories</p>

      <div class="categories">

      	<% if @categories.present? %>

	        <% @categories.each do |category| %>

	          <div class="info">
	            <div class="name"><span><%=link_to category.name, category_path(category) %></span></div>
	            <div class="description"><span><%= category.description %></span></div>
	          </div>

        	<% end %>

				<% else %>

	  		<p>There are no Categories yet</p>

				<% end %>

    	</div>

		</div>


	</div>
</div>