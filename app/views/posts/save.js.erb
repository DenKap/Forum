$("ul.errors").html("")
<% if @post.errors.any? %>
  <% @post.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $("#post_description").val('');
  $("#posts").append("<%=escape_javascript(render partial: 'posts/post', locals: { post: @post})%>");
<% end %>