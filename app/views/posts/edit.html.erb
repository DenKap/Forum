<div class="edit-form">
	<div class="wrapper">

		<h1>Edit Post</h1>

		<div class="add-form">
		  <%=form_for @post, url: topic_post_path(@topic, @post) do |f| %>
		    <%= render partial: 'form', locals: { f: f } %>
		    <p class="submit"><%=f.submit 'Update Post' %></p>
		  <% end %>
		</div>

	</div>
</div>