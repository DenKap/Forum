<ul>
  <li class="username"><%=link_to post.user.login, user_path(post.user) %></li>
  <li class="content"><%=post.description %></li>
  <li class="add-date"><%=post.created_at.strftime("%d %b %y at %I:%M%p") %></li>
  <% if @current_user.present? && @current_user.can_edit_post?(post)%>
  	<li><%=link_to "edit", edit_topic_post_path(@topic, post)%> / <%=link_to "delete", topic_post_path(@topic, post), method: :delete, data: { confirm: "Do you want to delete your post?" }%></li>
  <% end %>
</ul>